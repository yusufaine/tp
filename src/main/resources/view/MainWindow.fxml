<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>


<fx:root minHeight="725.0" minWidth="593.0" onCloseRequest="#handleExit" resizable="false" title="McKitchen"
         type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/mckitchen_32.png"/>
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@DarkTheme.css"/>
                <URL value="@Extensions.css"/>
            </stylesheets>

            <VBox>
                <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
                    <Menu mnemonicParsing="false" text="File">
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Help">
                        <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help"/>
                    </Menu>
                </MenuBar>
                <HBox VBox.vgrow="ALWAYS">
                    <children>

                        <VBox fx:id="personList" minWidth="340" prefWidth="340" styleClass="pane-with-border">
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="10"/>
                            </padding>
                            <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                        </VBox>

                        <StackPane fx:id="resultDisplayPlaceholder" styleClass="pane-with-border" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="5" left="10" right="10" top="5"/>
                            </padding>
                        </StackPane>
                    </children>
                </HBox>

                <StackPane fx:id="commandBoxPlaceholder" alignment="BOTTOM_LEFT" styleClass="pane-with-border">
                    <padding>
                        <Insets bottom="5" left="10" right="10" top="5"/>
                    </padding>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </StackPane>

                <StackPane fx:id="statusbarPlaceholder" alignment="BOTTOM_LEFT" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </StackPane>
            </VBox>
        </Scene>
    </scene>
</fx:root>
